
https://leetcode.com/problems/longest-arithmetic-subsequence-of-given-difference/description/?utm_source=chatgpt.com


class Solution {
public:
    int longestSubsequence(vector<int>& arr, int difference) {
        map<int,int>mp;
        int n=arr.size();
        int ans=0;
        for(int i=0;i<n;i++){
          int prev=arr[i]-difference;
          if(mp.find(prev)!=mp.end()){
            mp[arr[i]]=1+mp[prev];
          }
          else mp[arr[i]]=1;
          ans=max(ans,mp[arr[i]]);
        }
        return ans;
    }
};
